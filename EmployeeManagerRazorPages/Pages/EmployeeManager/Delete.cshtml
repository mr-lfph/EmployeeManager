@page "{id:int}"
@model DeleteModel

<h2 class="text-primary">Delete an Employee</h2>
<h3 class="text-danger"> Warning: You are about to delete an Employee</h3>

@if (Model.DataFound)
{
    <form method="post">
        <input type="hidden" asp-for="Employee.EmployeeID" />

        <table border="1">
            <tr>
                <td><label asp-for="Employee.EmployeeID"></label> </td>
                <td>@Model.Employee.EmployeeID</td>
            </tr>
            <tr>
                <td><label asp-for="Employee.FirstName"></label></td>
                <td>@Model.Employee.FirstName</td>
            </tr>
            <tr>
                <td><label asp-for="Employee.LastName"></label></td>
                <td>@Model.Employee.LastName</td>
            </tr>
            <tr>
                <td><label asp-for="Employee.Title"></label></td>
                <td>@Model.Employee.Title</td>
            </tr>

            <tr>
                <td><label asp-for="Employee.BirthDate"></label></td>
                <td>@Model.Employee.BirthDate.ToString("dd MMMM yyyy")</td>
            </tr>
            <tr>
                <td><label asp-for="Employee.HireDate"></label></td>
                <td>@Model.Employee.HireDate.ToString("dd MMMM yyyy")</td>
            </tr>
            <tr>
                <td><label asp-for="Employee.Country"></label></td>
                <td>@Model.Employee.Country</td>
            </tr>
            <tr>
                <td><label asp-for="Employee.Notes"></label></td>
                <td>@Model.Employee.Notes</td>
            </tr>
            <tr>
                <td></td>
                <td><button type="submit" class="btn btn-danger">Delete this Employee</button></td>
            </tr>
        </table>
    </form>
    <br />
    <a asp-page="List" class="btn btn-info">Back to Employee List</a>
}